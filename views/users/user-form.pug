extends ../layout

block content
    script(src="/javascripts/form.js")
    div(class="d-flex flex-row content justify-content-center mx-auto")
            form(class="card w-50 mt-5" method="post" action="/users/signup" name="myForm" onsubmit="return validateForm()")
                div(class="card-header") Inscription
                    div(class="card-body")
                        div(class="form-group")
                            label Username
                            input(class="form-control" type="text" name="username")
                        div(class="form-group")
                            label Email
                            input(class="form-control" id="email" type="email" name="email" placeholder="email@gmail.com")
                        div(class="form-group")
                            label Password
                            input(class="form-control" type="text" name="password" minlength="8")
                        if errors 
                            ul(class="my-2")
                                each error in errors
                                    li(class="text-danger")=error
                        div(class="w-100")
                            input(type="submit" value="Send" class='btn btn-primary ml-auto d-block')